<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/main_background"
    android:id="@+id/calculatorView"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age:"
        android:id="@+id/AgeTitle"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightInput"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/WeightTitle"
        android:layout_toEndOf="@+id/WeightTitle"
        android:textColor="#000000"
        style="@style/EditTextCustomHolo"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/heightft"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/weightInput"
        android:layout_toRightOf="@+id/WeightTitle"
        android:layout_toEndOf="@+id/WeightTitle"
        style="@style/EditTextCustomHolo"
        android:textColor="#000000" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/heightin"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/heightft"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        style="@style/EditTextCustomHolo"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight (lbs):"
        android:id="@+id/WeightTitle"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/heightft"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height (Ft.):"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/heightin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height (In.):"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/heightin"
        android:layout_alignBottom="@+id/heightin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/MaleBox"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignRight="@+id/heightft"
        android:layout_alignEnd="@+id/heightft"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/FemaleBox"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/MaleBox"
        android:layout_alignLeft="@+id/MaleBox"
        android:layout_alignStart="@+id/MaleBox"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender:"
        android:id="@+id/textView3"
        android:textSize="25dp"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        android:layout_below="@+id/heightin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculate"
        android:textSize="25dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/FemaleBox"
        android:layout_alignRight="@+id/heightin"
        android:layout_alignEnd="@+id/heightin"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ageInput"
        android:layout_alignTop="@+id/AgeTitle"
        android:layout_toRightOf="@+id/AgeTitle"
        android:layout_toLeftOf="@+id/MaleBox"
        android:layout_toStartOf="@+id/MaleBox"
        android:visibility="visible"
        android:textColor="#000000"
        style="@style/EditTextCustomHolo"
        android:paddingBottom="10dp" />

</RelativeLayout>
