<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.calcalc.beto.calcalc.ResultsActivity"
    android:id="@+id/page2"
    android:background="#FFFFFF">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Results"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#FF0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To Lose Weight:"
        android:id="@+id/textView5"
        android:layout_marginTop="31dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To Maintain Weight:"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/separator1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="To Gain Weight:"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/main_input1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-----------------------------"
        android:id="@+id/separator1"
        android:textStyle="bold"
        android:layout_below="@+id/lose_input1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="-----------------------------"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/separator1"
        android:layout_alignStart="@+id/separator1"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lose_input1"
        android:id="@+id/lose_input1"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FF0000"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/main_input1"
        android:layout_alignEnd="@+id/main_input1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/lose_input2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lose_input2"
        android:id="@+id/lose_input2"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FF0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="main_input1"
        android:id="@+id/main_input1"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="main_input2"
        android:id="@+id/main_input2"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/lose_input2"
        android:layout_alignEnd="@+id/lose_input2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="gain_input1"
        android:id="@+id/gain_input1"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/lose_input1"
        android:layout_alignStart="@+id/lose_input1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="to"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignTop="@+id/gain_input2"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="gain_input2"
        android:id="@+id/gain_input2"
        android:textColor="#FF0000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/main_input2"
        android:layout_alignEnd="@+id/main_input2"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/goalSpinner"
        android:layout_below="@+id/gain_input1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:spinnerMode="dialog"
        android:background="@drawable/spinner_background" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track"
        android:id="@+id/trackButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="trackButtonClick" />

</RelativeLayout>
